@model Portfolio.Site.Models.ProjectsViewModel

<div style="width: 80%" id="projectsList">
    <div class="container">
        @if (Model.Projects.Count == 0)
        {
            <h4 id="message" class="text-center">No results</h4>
        }
        else
        {
            <div id="message">
                <h4 class="text-center">Number of results: @Model.Projects.Count</h4>
                <hr />
            </div>
        }
        Count of pages: @Model.CountPages
        <div class="row">
            @foreach (var item in Model.Projects)
            {
                <div class="col-md-6 col-lg-4">
                    <h4 class="text-center">@item.Name</h4>
                    <a class="portfolio-item d-block mx-auto" href="/@item.ItemUrl?sc_lang=@Sitecore.Context.Language">
                        <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
                            <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
                                More
                            </div>
                        </div>
                        <img src="@item.ImageUrl" class="img-fluid"/>
                    </a>
                </div>
            }
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <button class="page-link" aria-label="Previous" onclick="goToPage(@Model.CurrentPage>1?@(--Model.CurrentPage):@Model.CurrentPage)">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </button>
                </li>
                @for (int i = 1; i <= Model.CountPages; i++)
                {
                    <li class="page-item"><button class="page-link" onclick="goToPage(@i)">@i</button></li>
                }
                <li class="page-item">
                    <button class="page-link" aria-label="Next" onclick="goToPage(@Model.CurrentPage<@Model.CountPages?@(++Model.CurrentPage):@Model.CurrentPage)">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>
