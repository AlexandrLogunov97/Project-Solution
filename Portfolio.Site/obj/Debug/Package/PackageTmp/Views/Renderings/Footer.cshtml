@using Sitecore.Data.Fields
@using Sitecore.Mvc.Presentation
@using Sitecore.Data
@using Sitecore.Data.Items
@model Sitecore.Data.Items.Item

<footer class="footer text-center" id="mainFooter">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-5 mb-lg-0">
                <h4 class="text-uppercase mb-4">@Sitecore.Globalization.Translate.Text("Location")</h4>
                <p class="lead mb-0">
                    @Html.Sitecore().Field("Author", Model)
                </p>
            </div>
            <div class="col-md-4 mb-5 mb-lg-0">
                @if (Model.Fields["Social Networks"] != null)
                {
                    <h4 class="text-uppercase mb-4">Around the Web</h4>
                    <ul class="list-inline mb-0">
                        @{ 
                            var items = (MultilistField)Model.Fields["Social Networks"];
                        }
                        @foreach (var socialNetwork in items.GetItems())
                        {
                            <li class="list-inline-item">
                                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="@socialNetwork.Fields["Link"].Value">
                                    <i class="fab fa-fw  @socialNetwork.Fields["View"].Value"></i>
                                </a>
                            </li>
                        }
                    </ul>
                }
            </div>
            <div class="col-md-4">
                <h4 class="text-uppercase mb-4">@Sitecore.Globalization.Translate.Text("About")</h4>
                <p class="lead mb-0">
                    @Html.Sitecore().Field("About", Model)
                </p>
            </div>
        </div>
    </div>
</footer>
<div class="copyright py-4 text-center text-white" id="secondaryFooter">
    <div class="container">
        <small>@Sitecore.Globalization.Translate.Text("Copyright")</small>
    </div>
</div>