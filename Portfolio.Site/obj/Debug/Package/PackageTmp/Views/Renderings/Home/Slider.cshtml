@model Portfolio.Site.Models.SliderViewModel


<header class="masthead  h-75">
    <div class="container">
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="@Convert.ToDouble(Convert.ToDouble(Model.Speed)*1000)">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i <= Model.Images.Length; i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 " src="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(Model.First)" alt="First slide">
                    </div>
                    @foreach (var image in Model.Images)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(image)" alt="Second slide">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</header>
